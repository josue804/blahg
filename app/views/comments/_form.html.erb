<%= form_for [@post, @comment] do |f| %>

  <div class="form-group">
    <%= f.label "Comment" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Your alias" %>
    <%= f.text_field :author, class: "form-control" %>
  </div>

  <%= f.submit "Add my Comment", class: "btn btn-primary" %>

<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label "Title" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Body" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <%= f.submit "Submit Post", class: "btn btn-success" %>
<% end %>

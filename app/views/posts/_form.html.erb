<%= form_tag(posts_create_path, method: 'post', multipart: true) do %>

  <div class="form-group">
    <%= label_tag :title %>
    <%= text_field_tag :title %>
  </div>

  <div class="form-group">
    <%= label_tag :body %>
    <%= text_field_tag :body %>
  </div>

  <div class="form-group">
    <%= label_tag "#tags" %>
    <%= text_field_tag :name %>
  </div>

  <%= submit_tag "Add Photo", class: "btn btn-success" %>

<% end %>
